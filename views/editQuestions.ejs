<link rel="stylesheet" href="/css/main.css">
<%- include('partials/navbar',{page:'/questions/editQuestion'}) %>

<div class="container mx-auto">
    <div class="hero bg-base-200 rounded-lg p-6">
        <div class="hero-content text-center">
            <div class="max-w-md">
                <h1 class="text-5xl font-bold">Edit Question</h1>
                <p class="py-6">Use the form below to edit the question</p>
            </div>
        </div>
    </div>

    <br><br><br>

    <form action="/questions/editQuestion" method="post">
        <div class="mb-4">
            <label for="id" class="block text-sm font-semibold">Question ID :</label>
            <input type="number" id="id" name="id" value="<%= Quests.id %>" required class="w-full p-2 border rounded" readonly>
        </div>

        <div class="mb-4">
            <label for="question" class="block text-sm font-semibold">Question :</label>
            <input type="text" id="question" name="question" value="<%= Quests.question %>" required class="w-full p-2 border rounded">
        </div>

      <div class="mb-4">
    <label for="options" class="block text-sm font-semibold">Options:</label>
    <% const optionsArray = Quests.options ? Quests.options.replace(/[{}"]/g, '').split(',') : []; %>
    <% const formattedOptions = optionsArray.map(option => `"${option.trim()}"`).join(','); %>
    <input type="text" id="options" name="options" value="{<%= formattedOptions %>" class="w-5/6 p-2 border rounded ml-2" required>
</div>

        <div class="mb-4">
            <label for="answer" class="block text-sm font-semibold">Correct Answer:</label>
            <input type="text" id="answer" name="answer" value="<%= Quests.answer %>" class="w-5/6 p-2 border rounded ml-2" required>
        </div>
            <button type="submit" class="btn btn-success">Update</button>
        </div>
    </form>
</div>
