<link rel="stylesheet" href="/css/main.css">
<%- include('partials/navbar',{page:'/questions/addQuestion'}) %>

<div class="container mx-auto">
    <div class="hero bg-base-200 rounded-lg p-6">
        <div class="hero-content text-center">
            <div class="max-w-md">
                <h1 class="text-5xl font-bold">Add Questions</h1>
                <p class="py-6">Use the form given below to add New Questions to the Quizzes</p>
            </div>
        </div>
    </div>

    <br><br><br>

    <form action="/questions/addQuestion" method="post">
        <div class="mb-4">
            <label for="id" class="block text-sm font-semibold">Question ID :</label>
            <input type="number" id="id" name="id" value="" required class="w-full p-2 border rounded">
        </div>

        <div class="mb-4">
            <label for="question" class="block text-sm font-semibold">Question :</label>
            <input type="text" id="question" name="question" value="" required class="w-full p-2 border rounded">
        </div>
        
        <div class="mb-4">
            <label for="options" class="block text-sm font-semibold">Options(Write in the Format {"Option1","Option2","Option3","Option4"}):</label>
            <input type="text" id="options" name="options" value="" required class="w-full p-2 border rounded ml-2">
        </div>

        <div class="mb-4">
            <label for="questype" class="block text-sm font-semibold">Question Type:</label>
            <select id="questype" name="questype" required class="w-full p-2 border rounded">
                <% Types.forEach(type => { %>
                    <option value="<%= type.type_id %>"><%= type.qtype %></option>
                <% }) %>
            </select>
        </div>

        <div class="mb-4">
            <label for="answer" class="block text-sm font-semibold">Correct Answer:</label>
            <span id="answer" class="block text-sm ml-2"></span>
            <input type="text" id="answer" name="answer" value="" required>
        </div>

        <div>
            <button type="submit" class="btn btn-success">Submit</button>
        </div>
    </form>
</div>
