<link rel="stylesheet" href="/css/main.css">
<%- include('partials/navbar',{page:'/questions/addQuestion'}) %>

<div class="container mx-auto">
    <div class="hero bg-base-200 rounded-lg p-6">
        <div class="hero-content text-center">
            <div class="max-w-md">
                <h1 class="text-5xl font-bold">Add Questions</h1>
                <p class="py-6">Use the form given below to add New Questions to the Quizzes</p>
            </div>
        </div>
    </div>

    <br><br><br>

    <form action="/questions/addQuestion" method="post">
        <div class="mb-4">
            <label for="id" class="block text-sm font-semibold">Question ID :</label>
            <input type="number" id="id" name="id" value="" required class="w-full p-2 border rounded">
        </div>

        <div class="mb-4">
            <label for="question" class="block text-sm font-semibold">Question :</label>
            <input type="text" id="question" name="question" value="" required class="w-full p-2 border rounded">
        </div>

        <% for (let i = 1; i <= 4; i++) { %>
            <div class="mb-4 flex items-center">
                <input type="radio" id="option<%= i %>" name="options" value="<%= i %>" required>
                <label for="option<%= i %>" class="block text-sm font-semibold ml-2">Option <%= i %>:</label>
                <input type="text" id="option<%= i %>" name="option<%= i %>" value="" required class="w-full p-2 border rounded ml-2">
            </div>
        <% } %>

        <div class="mb-4">
            <label for="types" class="block text-sm font-semibold">Question Type:</label>
            <select id="types" name="types" required class="w-full p-2 border rounded">
                <% Types.forEach(type => { %>
                    <option value="<%= type.type_id %>"><%= type.qtype %></option>
                <% }) %>
            </select>
        </div>

        <div class="mb-4">
            <label for="answer" class="block text-sm font-semibold">Correct Answer:</label>
            <span id="displayedAnswer" class="block text-sm ml-2"></span>
            <input type="hidden" id="answer" name="answer" value="" required>
        </div>

        <div>
            <button type="submit" class="btn btn-success">Submit</button>
        </div>
    </form>
   <script>
    document.addEventListener('DOMContentLoaded', function () {
        const radioButtons = document.querySelectorAll('input[type="radio"]');
        const displayedAnswer = document.getElementById('displayedAnswer');
        const answerInput = document.getElementById('answer');
        const optionInputs = document.querySelectorAll('input[name^="option"]');
        const form = document.querySelector('form');

        radioButtons.forEach(button => {
            button.addEventListener('change', function () {
                const selectedOption = this.value;
                displayedAnswer.textContent = ` ${optionInputs[selectedOption - 1].value}`;
                answerInput.value = optionInputs[selectedOption - 1].value;
            });
        });

        form.addEventListener('submit', function (event) {
          
            document.querySelectorAll('input[name^="option"]').forEach(input => {
                input.remove();
            });

         
            optionInputs.forEach((input, index) => {
                const optionName = `option${index + 1}`;
                const optionInput = document.createElement('input');
                optionInput.type = 'hidden';
                optionInput.name = optionName;
                optionInput.value = input.value;
                form.appendChild(optionInput);
            });
        });
    });
</script>
  

</div>
